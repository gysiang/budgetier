<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%> <%- include('partials/navbar'); -%><br />
  <body class="bg-color">
    <div class="container">
      <div
        class="col-12 my-5 d-flex align-items-center justify-content-center flex-column"
      >
        <div class="bg-white p-3 rounded">
          <h2 class="text-dark text-center sans-bold">Edit Your Profile!</h2>
          <br />
          <form
            action="/user-profile/<%= userData.id %>/edit?_method=PUT"
            method="POST"
          >
            <label for="name">Name:</label><br />
            <input
              type="text"
              id="name"
              name="name"
              size="50"
              class="form-control text-dark"
              value="<%= userData.name %>"
            />
            <br />
            <label for="email">Email:</label><br />
            <input
              type="text"
              id="email"
              name="email"
              class="form-control text-dark"
              size="50"
              value="<%= userData.email %>"
              required
            /><br />
            <label for="password">Password:</label><br />
            <input
              type="password"
              id="password"
              name="password"
              class="form-control text-dark"
              size="50"
              value=""
              required
            /><br />
            <div class="text-center">
              <input
                class="btn btn-primary btn-lg rounded-0"
                type="submit"
                value="Save"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/dashboard-footer'); -%>
  </body>
</html>
