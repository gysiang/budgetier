<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%> <%- include('partials/navbar'); -%><br />

<body class="bg-color">
  <div class="container">
    <div class="col-4">
      <p class="name text-dark sans-bold">Hello <%= userData.name %>!</p>
    </div>
    </div>
    <!-- Only show this image if there are no groups for user. -->
    <% if (group.length <= 0) { %>
    <div class="col-md-12 text-center">
      <h4>Tap New Group to get started</h3>
      <img style="max-width: 100%" src="/images/holiday.png" alt="holiday-maker" />
    </div>
    <% } %>
  </div>
  <div class="container">
    <!-- show a list of groups that user is in -->
    <% for (let i=0; i< groupInfo.length; i++) { %>
    <br />
    <div class="card text-center rounded-lg bg-light border-dark border-2 shadow">
      <div class="card-body">
        <h5 class="card-title text-dark sans-bold"><%= groupInfo[i].name %></h5>
        <p class="card-text text-dark sans-reg">
          <%= moment(groupInfo[i].vacation_date).format ('DD MMM YYYY')%>
        </p>
        <p class="card-text text-dark sans-reg">
          <%= groupInfo[i].days_of_vacation %> days
        </p>
        <div class="d-inline-flex flex-row align-items-start">
          <a
            href="/dashboard/<%= groupInfo[i].id %>"
            class="btn btn-primary mr-1 rounded-0"
            >See More</a
          >
          <a
            href="/dashboard/<%=groupInfo[i].id%>/edit"
            class="btn btn-primary mr-1 rounded-0"
            >Edit Vacation</a
          >
          <form
            id="submitButton"
            action="/dashboard/<%= groupInfo[i].id %>/delete?_method=DELETE"
            method="POST"
          >
            <label>
              <input class="btn btn-danger rounded-0" type="submit" value="Delete" />
            </label>
          </form>
        </div>
      </div>
      <div class="card-footer text-dark">
        Allocated Budget $<%= groupInfo[i].budget %>
      </div>
    </div>
      <% }%>
  </div>
<br/>
<%- include('partials/dashboard-footer'); -%> 
</body>
</html>
