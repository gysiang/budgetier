<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%> <%- include('partials/navbar-nologin');
  -%><br />
  <body class="bg-color">
    <div class="container">
      <div
        class="col-12 d-flex align-items-center justify-content-center flex-column text-dark"
      >
        <br />
        <div class="bg-white p-3 rounded">
          <h3 class="text-dark text-center">Sign Up!</h3>
          <form action="/signup" method="POST">
            <label for="name">Name:</label><br />
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              size="40"
              required
            /><br />
            <label for="email">Email:</label><br />
            <input
              type="text"
              id="email"
              name="email"
              class="form-control"
              size="40"
              required
            /><br />
            <label for="password">Password:</label><br />
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              size="40"
              required
            /><br />
            <div class="text-center">
              <input
                class="btn btn-primary btn-lg"
                type="submit"
                value="Submit"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
