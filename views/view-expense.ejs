<%- include('partials/user-header'); -%> <br /><br /><br />
<div class="container">
  <div
    class="col-12 my-5 d-flex align-items-center justify-content-center flex-column text-white"
  >
    <h1 class="text-dark">Edit Your Expenses!</h1>
    <br />
    <div class="bg-secondary p-3 rounded">
      <form
        action="/dashboard/<%= groupInfo.group_id %>/<%= groupInfo.id %>/edit?_method=PUT"
        method="POST"
      >
        <label for="name">Name of Expense :</label>
        <input
          type="text"
          id="name"
          name="name"
          size="50"
          class="form-control"
          value="<%=groupInfo.name%>"
          required
        /><br />
        <label for="date">Date of Expense:</label>
        <input type="date" id="date" name="date" size="50" class="form-control"
        value="<%=moment(groupInfo.date).format("YYYY-MM-DD")%>"
        required /><br />
        <br />
        <label for="budget">Amount</label>
        <br />
        <input
          type="text"
          name="budget"
          id="budget"
          pattern="^\d{1,3}(,\d{3})*(\.\d+)?$"
          value="<%= groupInfo.amount %>"
          data-type="currency"
          placeholder="$1000.00"
        />
        <br />
        <label for="note">Notes :</label>
        <input
          type="note"
          id="note"
          name="name"
          size="50"
          class="form-control"
          value="<%=groupInfo.note%>"
          required
        />
        <br />
        <input
          type="submit"
          value="Submit"
          class="btn btn-primary text-center btn-lg"
        />
      </form>
      </div>
    </div>
  </div>
</div>