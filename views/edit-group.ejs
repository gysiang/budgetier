<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%> <%- include('partials/navbar'); -%>
  <body class="bg-color">
    <div class="container">
      <div
        class="col-12 my-5 d-flex align-items-center justify-content-center flex-column"
      >
        <br />
        <div class="bg-white p-3 pb-3 rounded">
          <h2 class="text-dark text-center sans-bold">Edit Your Vacation!</h2>
          <br />
          <form
            action="/dashboard/<%= groupInfo[0].id %>/edit?_method=PUT"
            method="POST"
          >
            <label for="Item">Name of Vacation :</label>
            <input
              type="text"
              id="name"
              name="name text-dark"
              size="50"
              class="form-control"
              value="<%=groupInfo[0].name%>"
              required
            /><br />
            <label for="date">Date of Vacation:</label>
            <input type="date" id="date" name="date" size="50"
            class="form-control text-dark"
            value="<%=moment(groupInfo[0].vacation_date).format("YYYY-MM-DD")%>"
            required /><br />
            <label for="vacation_days">Days of Vacation:</label>
            <select
              class="form-control text-dark"
              name="vacation_days"
              id="vacation_days"
            >
              <% for (let i=1; i<=30; i+=1) { %> <% if
              (groupInfo[0].days_of_vacation!== i) { %>
              <option value="<%= `${i}` %>"><%= `${i}` %> Days</option>
              <% } else {%>
              <option value="<%= `${i}` %>" selected><%= `${i}` %> Days</option>
              <% } %> <% } %>
            </select>
            <br />
            <label for="budget">Enter Budget</label>
            <br />
            <input
              type="text"
              name="budget"
              id="budget"
              size="50"
              class="form-control text-dark"
              pattern="^\d{1,3}(,\d{3})*(\.\d+)?$"
              value="<%= groupInfo[0].budget %>"
              data-type="currency"
              placeholder="$1000.00"
            />
            <br />

            <input
              type="submit"
              value="Submit"
              class="btn btn-primary text-center btn-lg rounded-0"
            />
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/dashboard-footer'); -%>
  </body>
</html>
