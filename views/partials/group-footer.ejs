<footer class="fixed-bottom footer">
  <div
    class="col-md-12 d-flex flex-row d-flex justify-content-between bg-white pt-3"
  >
    <div class="d-flex flex-column align-items-center mr-1">
      <a href="/dashboard" style="color: #0c2d48">
        <span class="material-icons pl-1" style="font-size: 40px">
          dashboard</span
        >
      </a>
      <p class="text-black">Dashboard</p>
    </div>
    <div class="d-flex flex-column align-items-center ml-3">
      <a style="color: #0c2d48" onclick="showChart()">
        <span class="material-icons pl-1" style="font-size: 40px">
          analytics</span
        >
      </a>
      <script>
        const showChart = () => {
          var x = document.getElementById("expenseChart");
          if (x.style.display === "none") {
            x.style.display = "block";
          } else {
            x.style.display = "none";
          }
        };
      </script>
      <p class="text-black">Analytics</p>
    </div>

    <div class="d-flex flex-column align-items-center ml-4">
      <a href="/dashboard/<%=groupid%>/new-expense/" style="color: #0c2d48">
        <span class="material-icons" style="font-size: 40px"> add_circle </span>
      </a>
      <p class="text-black text-center">New Expense</p>
    </div>
    <div class="d-flex flex-column align-items-center ml-4 mr-1">
      <a href="/dashboard/<%=groupid%>/add-user" style="color: #0c2d48">
        <span class="material-icons" style="font-size: 40px"> person_add </span>
      </a>
      <p class="text-black text-center">Add User</p>
    </div>
  </div>
</footer>
